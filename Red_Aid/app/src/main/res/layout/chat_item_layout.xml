<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvCardChat"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivChatProfile"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="24dp"
        android:layout_width="wrap_content"
        android:background="@drawable/ic_chat_profile"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvChatName"
        android:layout_toEndOf="@id/ivChatProfile"
        android:layout_centerVertical="true"
        android:text="Sonu Sudharsan"
        style="@style/TextAppearance.MyApp.BodyBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/tvChatNew"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="1"
        android:maxLines="1"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/ic_new_chat"
        style="@style/TextAppearance.MyApp.BodyBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red_aid_black_100"
        android:layout_below="@id/ivChatProfile"/>

</RelativeLayout>