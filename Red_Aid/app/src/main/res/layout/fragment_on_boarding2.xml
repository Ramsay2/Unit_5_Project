<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.OnBoardingFragment2">

    <ImageView
        android:id="@+id/ivOnBoardingFragment2Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvOnBoardingFragment2Text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:background="@drawable/on_boarding2_logo" />


    <TextView
        android:id="@+id/tvOnBoardingFragment2Text"
        style="@style/TextAppearance.MyApp.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_centerInParent="true"
        android:text="Calling hundreds of Blood Donors is no more required using our platform"
        android:textAlignment="center"
        android:textColor="@color/black" />

</RelativeLayout>