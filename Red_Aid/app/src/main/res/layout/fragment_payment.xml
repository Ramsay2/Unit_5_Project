<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.PaymentFragment">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/loginToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/black"
                app:title="Select Payment Method"
                app:titleCentered="true"
                app:titleTextAppearance="@style/TextAppearance.MyApp.SubHeading" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24sp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_aid_red_100"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.MyApp.BodyBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16sp"
                    android:text="Deliver to Mata Chanan Devi Hospital"
                    android:textColor="@color/red_aid_black_700" />

                <TextView
                    style="@style/TextAppearance.MyApp.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8sp"
                    android:text="C1, Lal Sai Mandir Marg, Block C1, Janakpuri, New Delhi,"
                    android:textColor="@color/red_aid_black_700" />

                <TextView
                    style="@style/TextAppearance.MyApp.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8sp"
                    android:text="New Delhi - 110018"
                    android:textColor="@color/red_aid_black_700" />

                <TextView
                    style="@style/TextAppearance.MyApp.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8sp"
                    android:text="9876543567"
                    android:textColor="@color/red_aid_black_700" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="16dp"
                    android:padding="10dp"
                    android:text="Edit address"
                    android:textAppearance="@style/TextAppearance.MyApp.Button2"
                    android:textColor="@color/red_aid_red_700"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/red_aid_red_700"
                    app:strokeWidth="1dp" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_aid_green_100"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDebitCardMenu"
                    style="@style/TextAppearance.MyApp.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16sp"
                    android:drawableStart="@drawable/ic_card"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawablePadding="16sp"
                    android:paddingVertical="10dp"
                    android:text="Debit Card / Credit Card"
                    android:textColor="@color/red_aid_black_700" />

                <RelativeLayout
                    android:id="@+id/viewDebitCardMenuExpanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/etCardNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:hint="Card Number *"
                        android:inputType="number"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />

                    <EditText
                        android:id="@+id/etCardExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCardNumber"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_toStartOf="@+id/etCardCVV"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:hint="MM/YY *"
                        android:inputType="number"
                        android:lines="1"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />

                    <EditText
                        android:id="@+id/etCardCVV"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etCardNumber"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:drawableEnd="@drawable/ic_card_cvv"
                        android:hint="CVV *"
                        android:inputType="number"
                        android:lines="1"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />


                </RelativeLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_aid_green_100"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMobileWalletsMenu"
                    style="@style/TextAppearance.MyApp.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16sp"
                    android:drawableStart="@drawable/ic_wallet"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawablePadding="16sp"
                    android:paddingVertical="10dp"
                    android:text="Mobile Wallets"
                    android:textColor="@color/red_aid_black_700" />

                <RelativeLayout
                    android:id="@+id/viewMobileWalletsMenuExpanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/etWalletNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:hint="Card Number *"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />

                    <EditText
                        android:id="@+id/etWalletExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etWalletNumber"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_toStartOf="@+id/etWalletCVV"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:hint="MM/YY *"
                        android:lines="1"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />

                    <EditText
                        android:id="@+id/etWalletCVV"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etWalletNumber"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:drawableEnd="@drawable/ic_upi"
                        android:hint="CVV *"
                        android:lines="1"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />


                </RelativeLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_aid_green_100"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUPIMenu"
                    style="@style/TextAppearance.MyApp.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16sp"
                    android:drawableStart="@drawable/ic_upi"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawablePadding="16sp"
                    android:paddingVertical="10dp"
                    android:text="UPI"
                    android:textColor="@color/red_aid_black_700" />

                <RelativeLayout
                    android:id="@+id/viewUPIMenuExpanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/etUPINumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:hint="Card Number *"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />

                    <EditText
                        android:id="@+id/etUPIExpiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etUPINumber"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_toStartOf="@+id/etUPICVV"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:hint="MM/YY *"
                        android:lines="1"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />

                    <EditText
                        android:id="@+id/etUPICVV"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etUPINumber"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/ic_bg_edit_text_payment_white"
                        android:drawableEnd="@drawable/ic_upi"
                        android:hint="CVV *"
                        android:lines="1"
                        android:paddingHorizontal="16sp"
                        android:textAppearance="@style/TextAppearance.MyApp.Caption" />


                </RelativeLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="120dp"
            android:padding="20dp"
            android:text="PAY â‚¹1750"
            app:backgroundTint="@color/red_aid_red_200"
            app:cornerRadius="8sp"
            app:strokeColor="@color/red_aid_red_700" />
    </LinearLayout>
</layout>
