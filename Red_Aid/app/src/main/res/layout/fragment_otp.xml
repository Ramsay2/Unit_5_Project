<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OtpFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/loginToolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/black"
        app:title="Enter OTP"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.MyApp.SubHeading" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/red_aid_black_100"
        android:elevation="1.5dp" />

    <TextView
        style="@style/TextAppearance.MyApp.Heading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90sp"
        android:layout_marginHorizontal="24sp"
        android:text="Enter Verification Code"
        android:textColor="@color/black" />

    <TextView
        style="@style/TextAppearance.MyApp.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="24sp"
        android:layout_marginRight="120sp"
        android:text="We texted you a verification code to your phone number 9876543210"
        android:textColor="@color/red_aid_black_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="90sp"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:layout_marginHorizontal="24sp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MyApp.SubHeading"
            android:layout_marginEnd="20sp"
            android:paddingHorizontal="30sp"
            android:hint="0"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MyApp.SubHeading"
            android:layout_marginEnd="20sp"
            android:paddingHorizontal="30sp"
            android:hint="0"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MyApp.SubHeading"
            android:layout_marginEnd="20sp"
            android:paddingHorizontal="30sp"
            android:hint="0"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MyApp.SubHeading"
            android:paddingHorizontal="30sp"
            android:hint="0"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginHorizontal="24sp"
        android:backgroundTint="@color/red_aid_red_200"
        android:paddingVertical="16sp"
        android:text="VERIFY OTP"
        android:textAppearance="@style/TextAppearance.MyApp.Button1"
        android:textColor="@color/white"
        app:cornerRadius="4sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        style="@style/TextAppearance.MyApp.Button1"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textColorLink="@color/red_aid_red_700"
        android:text="Resend OTP" />


</LinearLayout>