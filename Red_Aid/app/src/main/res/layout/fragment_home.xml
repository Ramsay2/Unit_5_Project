<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLoginPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="164dp"
            android:layout_height="102dp"
            android:gravity="center"
            android:background="@drawable/ic_login_popup">

            <TextView
                android:id="@+id/tvloginPopup"
                style="@style/TextAppearance.MyApp.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Please Login/Sign up to continue" />

            <TextView
                style="@style/TextAppearance.MyApp.BodyBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/tvloginPopup"
                android:gravity="center"
                android:textColor="@color/red_aid_black_200"
                android:layout_marginLeft="8dp"
                android:layout_alignStart="@id/tvloginPopup"
                android:text="Cancel" />
            <TextView
                style="@style/TextAppearance.MyApp.BodyBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/tvloginPopup"
                android:gravity="center"
                android:textColor="@color/red_aid_black_700"
                android:layout_marginRight="8dp"
                android:layout_alignEnd="@id/tvloginPopup"
                android:text="Ok" />


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".views.HomeFragment">


        <ImageView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_frame_blood_donate_two" />

        <ImageView
            android:id="@+id/ivframe2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_frame_find_blood" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/ivframe3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/refer_and_earn" />

            <ImageView
                android:id="@+id/ivframe4"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:src="@drawable/blood_bank_near" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivframe5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_frame_five" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We are here to Help"
            android:textColor="#046F5B" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>