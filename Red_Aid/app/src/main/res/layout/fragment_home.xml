<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.HomeFragment">

   <ImageView
       android:id="@+id/tvText"
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/frame_one"/>
   <ImageView
       android:id="@+id/ivframe2"
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/frame_two"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="2"
       android:layout_marginHorizontal="25dp"
      android:orientation="horizontal">
      <ImageView
          android:id="@+id/ivframe3"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/frame_three"/>
      <ImageView
          android:id="@+id/ivframe4"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/frame_four"/>

   </LinearLayout>
   <ImageView
       android:id="@+id/ivframe5"
       android:layout_marginTop="40dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_frame_five"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:text="We are here to Help"
      android:gravity="center"
      android:textColor="#046F5B"/>

</LinearLayout>