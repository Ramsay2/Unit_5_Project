<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.HomeFragment">


    <ImageView
        android:id="@+id/tvText"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/frame_one" />

    <ImageView
        android:id="@+id/ivframe2"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/frame_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

       <ImageView
           android:id="@+id/ivframe3"
           android:layout_width="199dp"
           android:layout_height="wrap_content"

           android:src="@drawable/frame_three" />

        <ImageView
            android:id="@+id/ivframe4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/frame_four" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivframe5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_frame_five" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="We are here to Help"
        android:textColor="#046F5B" />

</LinearLayout>